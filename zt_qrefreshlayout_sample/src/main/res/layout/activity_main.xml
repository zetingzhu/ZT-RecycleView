<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ListView示例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnRecycler"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RecyclerView示例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnImage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ImageView示例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView示例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCoordinator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CoordinatorLayout示例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnNestedScroll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NestedScrollView示例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnOld"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SwipeRefreshLayout官方示例"
        android:textAllCaps="false" />

</LinearLayout>