<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".act.ActRecycleViewV1">

    <com.example.zzt.recycleview.widget.TextViewRoundClick
        android:id="@+id/btn_sss"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/blue" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".act.ActRecycleViewV1">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/yellow" />

    <com.example.zzt.recycleview.groupedadapter.widget.StickyHeaderLayout
        android:id="@+id/sticky_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".act.ActRecycleViewV1">

        </androidx.recyclerview.widget.RecyclerView>
    </com.example.zzt.recycleview.groupedadapter.widget.StickyHeaderLayout>

</LinearLayout>